<head>
    <title>ForDogs - Home</title>
</head>
<div>
    <!-- HEADER -->
   {{>header}}
   <!-- HEADER -->
    <div class="row mx-0" id="homepage">
        {{>nav}}
        {{#if messages.edit_pet_msg}}
            <div class="alert alert-success alert-dismissible fade show text-center fixed-top lead p-3 w-50 m-auto" role="alert">
                Your pet's information has been updated succesfully.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if }}
        <div class="container col-sm-10" id="pagecontent">
            <br>
            <a href="/home-page" class="pt-4">
                <svg width="5em" height="2.5em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="#dc3545" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
            </a>
            <h1 class="display-4 pl-2">Pet's information</h1>
            <br>
            <form class="h5 font-weight-normal">
                <div class="form-group">
                    <label for="dogNameIn" class="col-form-label">Name:</label>
                    <input type="text"  readonly class="h5 font-weight-normal form-control-plaintext" name="" value ={{info.name}}>
                </div>
                <div class="form-group">
                    <label for="dogBreedIn" class="col-form-label">Breed:</label>
                    <input type="text"  readonly class="form-control-plaintext  h5 font-weight-normal" name="" value ={{info.breed}}>
                </div>
                <div class="form-group">
                    <label for="dogAgeIn" class="col-form-label">Age:</label>
                    <input type="text"  readonly class="form-control-plaintext  h5 font-weight-normal" name="" value ={{info.age}}>
                </div>
                <div class="form-group">
                    <label for="dogBirthIn" class="col-form-label">Birthday:</label>
                    <input type="date"  readonly class="form-control-plaintext  h5 font-weight-normal" name="" value ={{info.to_char}}>
                </div>
                <div class="py-3 text-center border-top">
                    <a href="/home-page/pets/edit/{{info.id}}" type="button" class="btn btn-outline-success btn-block">Edit</a>
                </div>
            </form>
        </div>
    </div>

    <!-- FOOTER -->
    {{>footer}}
</div>

{{>toggleNav}}