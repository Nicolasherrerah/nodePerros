<head>
    <title>ForDogs - Home</title>
</head>
<div>
    <!-- HEADER -->
   {{>header}}
   <!-- HEADER -->
    <div class="row mx-0" id="homepage">
        {{>nav}}
        <div class="container col-sm-10" id="pagecontent">
            <h1 class="display-4 pl-2">Change your pet's information</h1>
            <br>
            <form class="h5 font-weight-normal" action="/home-page/pets/update/{{info.id}}" method="POST">
                <div class="form-group">
                    <label for="dogNameIn" class="col-form-label">Name:</label>
                    <input type="text" class="h5 font-weight-normal d-block" name="name" value ={{info.name}}>
                </div>
                <div class="form-group">
                    <label for="dogBreedIn" class="col-form-label">Breed:</label>
                    <input type="text" class="h5 font-weight-normal d-block" name="breed" value ={{info.breed}}>
                </div>
                <div class="form-group">
                    <label for="dogAgeIn" class="col-form-label">Age:</label>
                    <input type="text"  class="h5 font-weight-normal d-block" name="age" value ={{info.age}}>
                </div>
                <div class="form-group">
                    <label for="dogBirthIn" class="col-form-label">Birthday:</label>
                    <input type="date" class="h5 font-weight-normal d-block" name="birthday" value ={{info.to_char}}>
                </div>
                <div class="py-3 text-center border-top">
                    <button type="submit" class="btn btn-success mx-3 btn-lg">Update</button>
                    <a href="/home-page/pets/{{info.id}}" type="button" class="btn btn-danger btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- FOOTER -->
    {{>footer}}
</div>

{{>toggleNav}}